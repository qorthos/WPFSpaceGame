<UserControl x:Class="WPFSpaceGame.Views.TitleUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFSpaceGame.Views"
             mc:Ignorable="d" 
            d:DesignHeight="800" d:DesignWidth="1366">
    <Grid>
        <DockPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="30">
            <TextBlock DockPanel.Dock="Top" FontSize="30" Padding="30">UNTITLED SPACE GAME</TextBlock>
            <Button DockPanel.Dock="Top" Command="{Binding CMDStartNewGame}">Start New Game</Button>
            <Button DockPanel.Dock="Top">Load Game</Button>
            <Button DockPanel.Dock="Top">Quit</Button>
            <Label></Label>
        </DockPanel>
        
    </Grid>
</UserControl>
